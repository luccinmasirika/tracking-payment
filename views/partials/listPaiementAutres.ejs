      <script>
       $(document).ready(function () {

         // GET BY ID CLICK
         $('body').on('click', '.update',function(){
             const id =  $(this).attr('data-id');
             const API = $(this).attr('data-api');

             //GET ELEMENTS
             $.get(`${API.trim()}/paiement-autre/${id}`, function(data, status){
               document.getElementById("payment").value =  data.payment;
               document.getElementById("montant").innerText =  data.montant;
               document.getElementById("agent").value =  data.agent;
               document.getElementById("refference").value =  data.refference;
               document.getElementById("date").value =  data.date;
               document.getElementById("libelle").value =  data.libelle;
               document.getElementById("province").value =  data.province;
               document.getElementById("description").value =  data.description;

               //UPDATE ELEMENTS
               $("#form").submit(function (event) {
                 var formData = {
                    payment: $("#payment").val(),
                    montant: $("#montant").val(),
                    agent: $("#agent").val(),
                    refference: $("#refference").val(),
                    date: $("#date").val(),
                    libelle: $("#libelle").val(),
                    province: $("#province").val(),
                    description: $("#description").val(),
                   };

                   $.ajax({
                   type: "POST",
                   url: `${API.trim()}/paiement-autre/${id}?_method=PUT`,
                   data: formData,
                   dataType: "json",
                   encode: true,
                   }).done(function (data) {
                       $('#update').removeClass('hidden')
                       $('#refresh').load(document.URL +  ' #refresh');
                   });

                   event.preventDefault();
               });

             });
             });

             //DELETE FORM
             $('body').on('click', '.remove',function(){
               const id =  $(this).attr('data-id');
               const API = $(this).attr('data-api');
             $.post(`${API.trim()}/paiement-autre/${id}?_method=DELETE`, function(data, status){
              $('#alert').removeClass('hidden')
               $('#refresh').load(document.URL +  ' #refresh');
             });
             });

       });
       </script>

