            <div class="main-content">

              <div class="page-content">
                  <div class="container-fluid">

                      <!-- start page title -->
                      <div class="row">
                          <div class="col-12">
                              <div class="page-title-box d-flex align-items-center justify-content-between">
                                  <h4 class="mb-0">Autres Paiements</h4>
                              </div>
                          </div>
                      </div>
                      <!-- end page title -->

                      <div class="row">
                        <div class="col-lg-12">

                            <% if(locals.flash){%>
                                <div
                                  class="alert alert-<%=(Object.keys(locals.flash)[0]=='Error') ? 'danger' : 'success' %> alert-dismissible fade show"
                                  role="alert"
                                >
                                  <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="alert"
                                    aria-label="Close"
                                  ></button>
                                  <strong><%= Object.keys(locals.flash)[0] %> !</strong>
                                  <%=locals.flash.Error || locals.flash.Success%>
                                </div>
                                <%}%>

                                <div
                                          class="alert alert-success alert-dismissible fade show hidden"
                                          role="alert"
                                          id="alert"
                                        >
                                          <button
                                            type="button"
                                            class="btn-close"
                                            data-bs-dismiss="alert"
                                            aria-label="Close"
                                          ></button>
                                          <strong>Deleted !</strong>
                                        </div>

                            <div class="table-responsive mb-4" id="refresh">
                                <table class="table table-centered datatable dt-responsive nowrap table-card-list" style="border-collapse: collapse; border-spacing: 0 12px; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Type de paiement</th>
                                            <th>Montant</th>
                                            <th>Bénéficiaire</th>
                                            <th>Réfference</th>
                                            <th>Date</th>
                                            <th>Libellé</th>
                                            <th>Province</th>
                                            <th style="width: 120px;">Action</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       <% data && data.forEach((el, index) => { %>
                                        <tr>
                                          <td><a href="javascript: void(0);" class="text-dark fw-bold"><%=index + 1 %> </a> </td>
                                          <td>
                                              <%=el.payment%>
                                          </td>
                                          <td>
                                            <%=el.montant%>$
                                          </td>
                                          <td>
                                            <%=el.agent.substring(0,15)%>...
                                          </td>
                                          <td><%=el.refference%></td>
                                          <td><%=el.date%></td>
                                          <td><%=el.libelle%></td>
                                          <td><%=el.province%></td>
                                          <td>
                                            <button type="button" class="px-3 text-danger remove" data-id="<%=el._id%>" data-api="<%=api%> " style="background: transparent; border: none;"><i class="uil uil-trash-alt font-size-18"></i></button>
                                            <button type="button" data-bs-toggle="modal" data-bs-target=".preview" class="btn btn-primary btn-sm btn-rounded waves-effect waves-light">Preview <i class="fas fa-eye"></i></button>
                                          </td>
                                          <td><%=el.description%></td>
                                      </tr>
                                       <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                    </div>
                    <!-- end row -->


                  </div> <!-- container-fluid -->
              </div>
